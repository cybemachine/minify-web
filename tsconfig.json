{
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "compilerOptions": {
        "target": "ESnext",
        "module": "commonjs",
        "alwaysStrict": true,
        "charset": "utf8",
        "declarationDir": "./@types",
        "declaration": true,
        "diagnostics": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "lib": [
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "esnext"
        ],
        "moduleResolution": "node",
        "pretty": true,
        "newLine": "crlf",
        "noImplicitAny": true,
        "outDir": "./dist",
        "strict": true,
        "stripInternal": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}